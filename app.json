{
  "id": "us.originally.ousa",
  "version": "0.0.3",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "OUSA"
  },
  "description": {
    "en":  "Enjoy a seamless unified smart home experience across all your devices"
  },
  "category": [
    "tools",
    "internet"
  ],
  "tags": {
    "en": [ "OUSA", "HUB", "gateway", "bridge", "discovery" ]
  },
  "permissions": [
    "homey:manager:api",
    "homey:app:nl.scanno.mqtt"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Originally US",
    "email": "hello@originally.us"
  },
  "contributors": {
    "developers": [
      {
        "name": "Originally US",
        "email": "hello@originally.us"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/originallyus/us.originally.ousa/issues"
  },
  "homeyCommunityTopicId": 6766,
  "drivers": [
    {
      "id": "device",
      "name": {
        "en": "OUSA Device"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/device/assets/images/large.png",
        "small": "/drivers/device/assets/images/small.png"
      },
      "pair": [
        {
          "id": "device",
          "navigation": {
            "next": "capabilities"
          }
        },
        {
          "id": "capabilities",
          "navigation": {
            "next": "done"
          }
        },
        {
          "id": "capability",
          "navigation": {
            "next": "capabilities"
          }
        },
        {
          "id": "done"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General"
          },
          "children": [
            {
              "id": "onOffValues",
              "type": "radio",
              "label": {
                "en": "On/Off values"
              },
              "value": "bool",
              "values": [
                {
                  "id": "bool",
                  "label": {
                    "en": "true/false"
                  }
                },
                {
                  "id": "int",
                  "label": {
                    "en": "1/0"
                  }
                },
                {
                  "id": "onoff",
                  "label": {
                    "en": "on/off"
                  }
                },
                {
                  "id": "yesno",
                  "label": {
                    "en": "yes/no"
                  }
                }
              ],
              "hint": {
                "en": "By default Homey uses the values 'true' and 'false' for the onoff capability. Choose different values when needed."
              }
            },
            {
              "id": "percentageScale",
              "type": "radio",
              "label": {
                "en": "Percentage scaling"
              },
              "value": "int",
              "values": [
                {
                  "id": "default",
                  "label": {
                    "en": "default (original value)"
                  }
                },
                {
                  "id": "int",
                  "label": {
                    "en": "int (0...100)"
                  }
                },
                {
                  "id": "float",
                  "label": {
                    "en": "float (0...1)"
                  }
                }
              ],
              "hint": {
                "en": "By default all Homey values are represented as a floating point value between 0 and 1. Most other applications use an integer representation of 0 - 100 for percentages and cannot handle floating point percentages. To overcome this, all percentages are scaled between 0 and 100 by default; change when needed."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Advanced"
          },
          "children": [
            {
              "id": "topics",
              "type": "textarea",
              "label": {
                "en": "Topics"
              },
              "value": "",
              "hint": {
                "en": "WARNING: Messing up the topic config will break the device!"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "homie",
      "name": {
        "en": "OUSA Discovery"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/homie/assets/images/large.png",
        "small": "/drivers/homie/assets/images/small.png"
      },
      "pair": [
        {
          "id": "topic"
        },
        {
          "id": "discover"
        }
      ]
    }
  ],

  "flow": {
    "triggers": [
      {
        "id": "device_changed",
        "title": {
          "en": "An OUSA device changed"
        },
        "tokens": [
          {
            "name": "value",
            "title": {
              "en": "value"
            },
            "example": {
              "en": "true"
            }
          },
          {
            "name": "Capability",
            "title": {
              "en": "capability"
            },
            "example": {
              "en": "onoff"
            }
          },
          {
            "name": "device",
            "title": {
              "en": "device"
            },
            "example": {
              "en": "Ceiling Light"
            }
          }
        ]
      },
      {
        "id": "change",
        "title": {
          "en": "Value changed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=device"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_value",
        "title": {
          "en": "Set a capability value"
        },
        "args": [
          {
            "name": "capability",
            "type": "text",
            "placeholder": {
              "en": "Capability"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "Value"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=device"
          }
        ]
      }
    ]
  }
}