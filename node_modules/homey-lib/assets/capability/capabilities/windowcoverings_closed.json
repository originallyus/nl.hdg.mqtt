    "en": "Closed",
    "nl": "Gesloten",
	"de": "Geschlossen"
  },
  "getable": true,
  "setable": true,
  "uiComponent": "toggle",
  "$flow": {
    "triggers": [
      {
        "id": "windowcoverings_closed_true",
