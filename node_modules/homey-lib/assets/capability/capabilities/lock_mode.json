{
  "type": "enum",
  "title": {
    "en": "Lock mode",
    "nl": "Slot modus",
	"de": "Schloss-Modus"
  },
  "values": [
    {
      "id": "always_locked",
      "title": {
        "en": "Always locked",
        "nl": "Altijd op slot",
		"de": "Immer verriegelt"
      }
    },
    {
      "id": "always_unlocked",
      "title": {
        "en": "Always unlocked",
        "nl": "Altijd open",
		"de": "Immer entriegelt"
      }
    },
    {
      "id": "locked_until_unlock",
      "title": {
        "en": "Locked until unlocked",
        "nl": "Op slot tot geopend",
		"de": "Verriegelt, bis entriegelt wird"
      }
    }
  ],
  "getable": true,
  "setable": true,
  "uiComponent": "picker",
  "$flow": {
    "triggers": [
      {
        "id": "lock_mode_changed",
        "title": {
          "en": "Lock mode has changed",
          "nl": "Slot modus is veranderd",
		  "de": "Schloss-Modus hat sich ge√§ndert"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "lock_mode_is",
        "title": {
          "en": "Lock mode is",
          "nl": "Slot modus is",
		  "de": "Schloss-Modus ist"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "mode",
        "title": {
          "en": "Set mode",
          "nl": "Stel stand in",
		  "de": "Modus setzen"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  }
}